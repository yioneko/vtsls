{
  "name": "@vtsls/language-service",
  "description": "LSP wrapper for typescript extension of vscode",
  "version": "0.2.10",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "files": [
    "./configuration.schema.json",
    "./dist/index.js",
    "./dist/index.mjs",
    "./dist/**/*.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./configuration-schema": "./configuration.schema.json"
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "@vtsls/vscode-fuzzy": "workspace:*",
    "jsonc-parser": "^3.2.0",
    "semver": "7.5.2",
    "typescript": "5.9.3",
    "vscode-languageserver-protocol": "^3.17.6-next.16",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.1.0"
  },
  "devDependencies": {
    "@types/semver": "^7.5.0",
    "esbuild": "^0.27.0",
    "vitest": "^3.0.3"
  },
  "scripts": {
    "build": "node scripts/build.js && tsc",
    "build:watch": "node scripts/build.js watch & tsc --watch",
    "type-check": "tsc --noEmit --emitDeclarationOnly false",
    "test": "vitest run",
    "test:watch": "vitest",
    "patch-extension": "node scripts/patch.js",
    "gen-schema": "node scripts/genConfigSchema.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yioneko/vtsls.git",
    "directory": "packages/service"
  }
}
