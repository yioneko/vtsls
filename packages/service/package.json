{
  "name": "@vtsls/language-service",
  "description": "LSP wrapper for typescript extension of vscode",
  "version": "0.2.8",
  "license": "MIT",
  "engines": {
    "node": ">=16"
  },
  "type": "module",
  "files": [
    "./dist/index.js",
    "./dist/index.mjs",
    "./dist/**/*.d.ts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "@vscode/l10n": "^0.0.18",
    "@vtsls/vscode-fuzzy": "workspace:0.0.1",
    "jsonc-parser": "^3.2.0",
    "semver": "7.5.2",
    "typescript": "5.7.3",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-textdocument": "^1.0.12",
    "vscode-uri": "^3.1.0"
  },
  "devDependencies": {
    "@types/semver": "^7.5.0",
    "esbuild": "^0.25.0",
    "vitest": "^3.0.3"
  },
  "scripts": {
    "build": "node scripts/build.cjs && tsc",
    "build:watch": "node scripts/build.cjs watch & tsc --watch",
    "type-check": "tsc --noEmit --emitDeclarationOnly false",
    "test": "vitest run",
    "test:watch": "vitest",
    "patch-extension": "node scripts/patch.js",
    "gen-schema": "node scripts/genConfigSchema.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yioneko/vtsls.git",
    "directory": "packages/service"
  }
}
